#!/bin/bash

echo "-----------------------"
echo "Criando banco zerado..."
echo ""
mysqladmin -fu root drop mst_novo && echo "OK" || echo "[ERRO] ao dropar mst_novo"
mysqladmin -u root create mst_novo && echo "OK" || echo "[ERRO] ao criar mst_novo"
echo "-----------------------"

echo "Subindo sql base..."
mysql -u root mst_novo < mst-completo.sql && echo "OK" || echo "[ERRO] ao subir mst-completo.sql"
mysql -u root mst_novo < mst-extra.sql && echo "OK" || echo "[ERRO] ao subir mst-extra.sql"
echo "-----------------------"

echo "Subindo paginas, blocks, menus, views..."
mysql -u root mst_novo < mst-paginas.sql && echo "OK" || echo "[ERRO] ao subir mst-paginas.sql!"
mysql -u root mst_novo < mst-cache.sql && echo "OK" || echo "[ERRO] ao subir mst-cache.sql!"
mysql -u root mst_novo < mst-views.sql && echo "OK" || echo "[ERRO] ao subir mst-views.sql!"
mysql -u root mst_novo < mst-blocks.sql && echo "OK" || echo "[ERRO] ao subir mst-blocks.sql!"
mysql -u root mst_novo < mst-boxes.sql && echo "OK" || echo "[ERRO] ao subir mst-boxes.sql!"
mysql -u root mst_novo < mst-menu.sql && echo "OK" || echo "[ERRO] ao subir mst-menu.sql!"
mysql -u root mst_novo < mst-cck.sql && echo "OK" || echo "[ERRO] ao subir mst-cck.sql!"
mysql -u root mst_novo < mst-imagecache.sql && echo "OK" || echo "[ERRO] ao subir mst-imagecache.sql!"
mysql -u root mst_novo < mst-locales.sql && echo "OK" || echo "[ERRO] ao subir mst-locales.sql!"
mysql -u root mst_novo < mst-system.sql && echo "OK" || echo "[ERRO] ao subir mst-system.sql!"
mysql -u root mst_novo < mst-ubercart.sql && echo "OK" || echo "[ERRO] ao subir mst-ubercart.sql!"



echo "-----------------------"

echo "Importando secoes..."
wget -q -P /tmp http://mst.localhost/sites/mst/tools/01-migrador-secoes.php && echo "OK" || echo "[ERRO] ao importar secoes!"
echo "-----------------------"

echo "Importando revistas, especiais, jornais e paginas..."
wget -q -P /tmp http://mst.localhost/sites/mst/tools/02-migrador-edicoes.php && echo "OK" || echo "[ERRO] ao importar revistas, especias, jornais e paginas!"
echo "-----------------------"

echo "Subindo termos"
mysql -u root mst_novo < mst-term.sql && echo "OK" || echo "[ERRO] ao subir mst-term.sql!"
echo "-----------------------"

echo "Importando imagens..."
wget -q -P /tmp http://mst.localhost/sites/mst/tools/03-migrador-imagens.php && echo "OK" || echo "[ERRO] ao importar imagens!"
echo "-----------------------"

echo "Importando mural..."
wget -q -P /tmp http://mst.localhost/sites/mst/tools/04-migrador-comments.php && echo "OK" || echo "[ERRO] ao importar mural!"
echo "-----------------------"
